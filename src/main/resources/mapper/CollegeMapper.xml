<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itmang.mapper.CollegeMapper">
    <insert id="insertCollege">
        insert into college(name, concise, majors)
        values (#{name}, #{concise}, #{majors})
    </insert>

    <update id="updateCollege">
        update college
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="concise != null and concise != ''">concise = #{concise},</if>
            <if test="majors != null and majors != ''">majors = #{majors},</if>
        </set>
        where id = #{id}
    </update>

    <select id="pageCollege" resultType="com.itmang.pojo.entity.College">
        select * from college
        <where>
            <if test="name != null and name != ''">
                    and name like concat('%',#{name},'%')
            </if>
         </where>
        order by create_time desc
    </select>
</mapper>
